{
  "name": "next-ark-nova-cards",
  "version": "0.2.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "desktop:dev": "concurrently -k \"pnpm dev\" \"pnpm electron:dev\"",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "desktop:build": "pnpm build && pnpm electron:build",
    "electron:build": "electron-builder",
    "desktop:pack": "pnpm build && electron-builder --dir",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "lint:strict": "biome check src",
    "lint:errors": "biome check src --diagnostic-level=error",
    "typecheck": "tsc --noEmit --incremental false",
    "test:watch": "jest --watch",
    "test": "jest",
    "translate": "npx i18next-parser --config i18next-parser.config.js --output public/locales/en/common.json",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "deploy": "vercel deploy --prod"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@hookform/resolvers": "^3.2.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-hover-card": "^1.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@tanstack/react-query": "^4.32.6",
    "@vercel/analytics": "^1.0.1",
    "class-variance-authority": "^0.6.1",
    "clsx": "^1.2.1",
    "cmdk": "^0.2.0",
    "date-fns": "^3.6.0",
    "dayjs": "^1.11.9",
    "embla-carousel-react": "^8.1.5",
    "framer-motion": "^10.12.18",
    "hashids": "^2.3.0",
    "html-to-image": "^1.11.11",
    "i18next": "^23.2.6",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.1",
    "i18next-parser": "^8.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.259.0",
    "next": "^13.3.4",
    "next-i18next": "^14.0.0",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.0.1",
    "react": "^18.2.0",
    "react-card-flip": "^1.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.4",
    "react-i18next": "^13.0.1",
    "react-icons": "^4.8.0",
    "react-markdown": "^8.0.7",
    "react-odometerjs": "3.1.0",
    "react-textarea-autosize": "^8.5.2",
    "seedrandom": "^3.0.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^1.13.2",
    "tailwindcss-animate": "^1.0.6",
    "uuid": "^10.0.0",
    "valtio": "^1.11.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@svgr/webpack": "^6.5.1",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.14.197",
    "@types/react": "^18.2.5",
    "@types/react-html-parser": "^2.0.2",
    "@types/seedrandom": "^3.0.8",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.0.1",
    "depcheck": "^1.4.6",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "i18next-scanner": "^4.2.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.5.0",
    "next-router-mock": "^0.7.5",
    "next-sitemap": "^2.5.28",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "biome check --write --diagnostic-level=error"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "biome format --write"
    ]
  },
  "build": {
    "appId": "com.bmuscede.arknova",
    "productName": "Ark Nova Card Creator",
    "files": [
      "electron/**/*",
      "package.json",
      "next.config.js",
      "next-i18next.config.js",
      "next-sitemap.config.js",
      "components.json",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*"
    ],
    "asarUnpack": [
      ".next/standalone/**",
      ".next/static/**",
      "public/**"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "electron/resources"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "packageManager": "pnpm@8.6.12"
}